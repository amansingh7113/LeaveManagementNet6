@model EmployeeListVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User.IsInRole(Roles.User))
    {
        <h1 class="display-4">Welcome</h1>
    }
    else if (User.IsInRole(Roles.Administrator))
    {
        <h1 class="display-4">Welcome to Employee Management System, Admin</h1>
    }
    else
    {
        <h1 class="display-4">Welcome to Employee Management System</h1>
        <br />
        <h3 class="text-center">Please Login or Register to continue</h3>
    }
    
</div>
